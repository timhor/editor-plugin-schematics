{
  "name": "twp-editor-plugin-schematics",
  "version": "0.0.0",
  "description": "Schematics to automate scaffolding of new TWP Editor plugins",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "twp-editor-plugin": "npm run build && schematics .:twp-editor-plugin",
    "test": "npm run build && jest",
    "simulate:local:clean": "rm -r packages/",
    "simulate:local:setup:index": "mkdir -p packages/editor/editor-core/src/plugins && cp src/twp-editor-plugin/files/manual-testing/index.ts packages/editor/editor-core/src/plugins/",
    "simulate:local:setup:cpl": "mkdir -p packages/editor/editor-core/src/create-editor && cp src/twp-editor-plugin/files/manual-testing/create-plugins-list.ts packages/editor/editor-core/src/create-editor/",
    "simulate:local": "npm run simulate:local:clean && npm run simulate:local:setup:index && npm run simulate:local:setup:cpl && npm run build && schematics .:twp-editor-plugin --debug=false"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Tim Hor",
  "license": "Apache-2.0",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^9.1.7",
    "@angular-devkit/schematics": "^9.1.7",
    "typescript": "~3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^12.11.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,html,css,md,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true
  }
}
