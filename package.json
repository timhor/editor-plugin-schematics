{
  "name": "twp-editor-plugin",
  "version": "0.0.0",
  "description": "Schematics to automate scaffolding of new Editor plugins",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "twp-editor-plugin": "npm run build && schematics .:twp-editor-plugin",
    "test": "npm run build && jest",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Tim Hor",
  "license": "Apache-2.0",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^9.1.7",
    "@angular-devkit/schematics": "^9.1.7",
    "typescript": "~3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^12.11.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,html,css,md,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true
  }
}
